	<!-- JNDI数据源 -->
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/demo"
		proxy-interface="javax.sql.DataSource" lookup-on-startup="false" />
	<jee:jndi-lookup id="dataSource" jndi-name="jdbc/rageon"
		proxy-interface="javax.sql.DataSource" lookup-on-startup="false" />
